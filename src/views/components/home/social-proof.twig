{# Social Proof Component #}
{% if component and component.proof_items %}
<section class="social-proof py-20 bg-white">
    <div class="container mx-auto px-4">
        {# Section Header #}
        {% if component.social_proof_title %}
            <div class="text-center mb-16">
                <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 mb-6">
                    {{ component.social_proof_title }}
                </h2>
                <div class="w-24 h-1 bg-gradient-to-r from-primary-500 to-secondary-500 mx-auto rounded-full"></div>
            </div>
        {% endif %}
        
        {# Features Grid #}
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {% for item in component.proof_items %}
                <div class="feature-card group p-8 rounded-2xl bg-gradient-to-br from-gray-50 to-white border border-gray-100 hover:border-primary-200 transform hover:scale-105 transition-all duration-500 hover:shadow-2xl">
                    {# Icon Container #}
                    <div class="icon-container mb-6 relative">
                        <div class="w-20 h-20 bg-gradient-to-br from-primary-500 to-secondary-500 rounded-2xl flex items-center justify-center text-white text-3xl group-hover:scale-110 transition-transform duration-300">
                            <i class="{{ item.icon|default('sicon-star') }}"></i>
                        </div>
                        
                        {# Decorative Elements #}
                        <div class="absolute -top-2 -right-2 w-6 h-6 bg-accent-500 rounded-full opacity-0 group-hover:opacity-100 transition-all duration-500 transform scale-0 group-hover:scale-100"></div>
                        <div class="absolute -bottom-2 -left-2 w-4 h-4 bg-secondary-500 rounded-full opacity-0 group-hover:opacity-100 transition-all duration-500 delay-200 transform scale-0 group-hover:scale-100"></div>
                    </div>
                    
                    {# Content #}
                    <div class="content">
                        {% if item.title %}
                            <h3 class="text-xl font-bold text-gray-900 mb-4 group-hover:text-primary-600 transition-colors duration-300">
                                {{ item.title }}
                            </h3>
                        {% endif %}
                        
                        {% if item.description %}
                            <p class="text-gray-600 leading-relaxed group-hover:text-gray-700 transition-colors duration-300">
                                {{ item.description }}
                            </p>
                        {% endif %}
                    </div>
                    
                    {# Hover Effect Line #}
                    <div class="absolute bottom-0 left-0 right-0 h-1 bg-gradient-to-r from-primary-500 to-secondary-500 transform scale-x-0 group-hover:scale-x-100 transition-transform duration-500 origin-left rounded-b-2xl"></div>
                </div>
            {% endfor %}
        </div>
        
        {# Bottom CTA (no hard-coded text) #}
        <div class="text-center mt-16">
            <div class="bg-gradient-to-r from-primary-50 to-secondary-50 rounded-3xl p-8 border border-primary-100">
                <h3 class="text-2xl font-bold text-gray-900 mb-4">
                    {{ 'home.social_proof.bottom_cta_title' | trans }}
                </h3>
                <p class="text-gray-600 mb-6 max-w-2xl mx-auto">
                    {{ 'home.social_proof.bottom_cta_subtitle' | trans }}
                </p>
                <div class="flex flex-col sm:flex-row gap-4 justify-center">
                    <a href="{{ url('products') }}"
                       class="inline-flex items-center px-8 py-4 bg-primary-600 text-white font-semibold rounded-full hover:bg-primary-700 transform hover:scale-105 transition-all duration-300 shadow-lg hover:shadow-xl">
                        {{ 'home.social_proof.shop_now' | trans }}
                        <i class="sicon-arrow-left mr-2"></i>
                    </a>
                    <a href="{{ url('about') }}"
                       class="inline-flex items-center px-8 py-4 bg-white text-primary-600 font-semibold rounded-full border-2 border-primary-600 hover:bg-primary-600 hover:text-white transform hover:scale-105 transition-all duration-300">
                        {{ 'home.social_proof.about_us' | trans }}
                        <i class="sicon-info mr-2"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
{% else %}
{# Fallback when component fails to load (no hard-coded text) #}
<section class="social-proof py-20 bg-white">
    <div class="container mx-auto px-4">
        <div class="text-center">
            <div class="bg-gradient-to-r from-gray-50 to-white rounded-3xl p-8 border border-gray-200">
                <i class="sicon-users text-4xl text-gray-400 mb-4"></i>
                <h3 class="text-2xl font-bold text-gray-900 mb-4">
                    {{ 'home.social_proof.fallback_title' | trans }}
                </h3>
                <p class="text-gray-600 mb-6 max-w-2xl mx-auto">
                    {{ 'home.social_proof.fallback_subtitle' | trans }}
                </p>
                <a href="{{ url('products') }}"
                   class="inline-flex items-center px-8 py-4 bg-primary-600 text-white font-semibold rounded-full hover:bg-primary-700 transform hover:scale-105 transition-all duration-300 shadow-lg hover:shadow-xl">
                    {{ 'home.social_proof.shop_now' | trans }}
                    <i class="sicon-arrow-left mr-2"></i>
                </a>
            </div>
        </div>
    </div>
</section>
{% endif %}

<style>
.social-proof {
    --primary-500: {{ theme.settings.primary_color|default('#2563eb') }};
    --secondary-500: {{ theme.settings.secondary_color|default('#7c3aed') }};
    --accent-500: {{ theme.settings.accent_color|default('#f59e0b') }};
}

.feature-card {
    position: relative;
    overflow: hidden;
}

.feature-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, var(--primary-500), var(--secondary-500));
    opacity: 0;
    transition: opacity 0.3s ease;
    border-radius: 1rem;
    z-index: -1;
}

.feature-card:hover::before {
    opacity: 0.05;
}

.icon-container {
    position: relative;
}

.icon-container::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 100%;
    height: 100%;
    background: radial-gradient(circle, var(--primary-500), transparent);
    opacity: 0;
    transform: translate(-50%, -50%) scale(0);
    transition: all 0.3s ease;
    border-radius: 1rem;
    z-index: -1;
}

.feature-card:hover .icon-container::after {
    opacity: 0.1;
    transform: translate(-50%, -50%) scale(1.2);
}

@media (max-width: 768px) {
    .social-proof {
        padding: 3rem 1rem;
    }
    
    .social-proof h2 {
        font-size: 2rem;
    }
    
    .feature-card {
        padding: 1.5rem;
    }
    
    .icon-container .w-20 {
        width: 4rem;
        height: 4rem;
    }
}
</style>
